@{
    ViewBag.Title = "AddRssLink";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Rss Scapper Details</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6 center-block">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Enter Rss Feed link Details For Scrapper
                </div>
                <div class="panel-body">
                    <div class="row">
                        <form role="form">
                            <!-- /.col-lg-6 (nested) -->
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Channel Name</label>
                                    <input class="form-control" placeholder="Channel Name">
                                </div>
                                <div class="form-group">
                                    <label>Rss Category</label>
                                    <input class="form-control" placeholder="Rss Category">
                                </div>
                                <div class="form-group">
                                    <label>Rss Web Link</label>
                                    <input class="form-control" placeholder="For Example : http://www.bbc.com/arabic/index.xml">
                                </div>
                                <div class="form-group">
                                    <label>Title Path</label>
                                    <input class="form-control" placeholder="Tiitle Post path">
                                </div>
                                <div class="form-group">
                                    <label>Short Description Path</label>
                                    <input class="form-control" placeholder="short Description path">
                                </div>
                                <div class="form-group">
                                    <label>Detail Page Link Path</label>
                                    <input class="form-control" placeholder="Details page link path">
                                </div>
                                <div class="form-group">
                                    <label>Published Date Path</label>
                                    <input class="form-control" placeholder="post published date path">
                                </div>
                                <div class="form-group">
                                    <label>Rss Image</label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox">Is Image in Rss
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>Image Path</label>
                                    <input class="form-control" placeholder="Image path">
                                </div>
                                <div class="form-group">
                                    <label>Post Detail Path</label>
                                    <input class="form-control" placeholder="Post Detail path">
                                </div>
                                <div class="form-group">
                                    <label>SubCategory</label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox"> Is SubCategory available Rss
                                    </label>
                                </div>
                                <div class="form-group">
                                    <label>Image Path</label>
                                    <input class="form-control" placeholder="Rss Sub Category path">
                                </div>

                                <button type="submit" class="btn btn-default">Add Feed Details</button>

                            </div>
                        </form>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
   
</div>
<!-- /#page-wrapper -->
