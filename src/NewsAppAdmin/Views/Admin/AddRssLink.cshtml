@model NewsAppAdmin.MODEL.ModelFeed
@{
    ViewBag.Title = "AddRssLink";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    WebGrid grid = new WebGrid(rowsPerPage: 10, canPage: true, canSort: true);
}

@section feedDataListSection{

    <script type="text/javascript">
        $(document).ready(function () {
          //  GetRssFeedList();
        });

        function GetRssFeedList() {
            $("#fmGetRssLinkList").submit();
        }

    </script>
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Rss Scapper Details</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-6 center-block">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Enter Rss Feed link Details For Scrapper
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ValidationSummary(true)

                            @using (Html.BeginForm("AddRssLink", "Admin", FormMethod.Post, new { id = "frmAddRssLink", role = "form" }))
                            {
                                <!-- /.col-lg-6 (nested) -->

                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedChannelName, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedChannelName, new { @class = "form-control", placeholder = "Channel Name" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedChannelName)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedCategory, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedCategory, new { @class = "form-control", placeholder = "Feed Category" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedCategory)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedCategoryPath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedCategoryPath, new { @class = "form-control", placeholder = "Category Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedCategoryPath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedURL, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedURL, new { @class = "form-control", placeholder = "For Example : http://www.bbc.com/arabic/index.xml" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedURL)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedTitlePath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedTitlePath, new { @class = "form-control", placeholder = "Title Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedTitlePath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedShortDescPath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedShortDescPath, new { @class = "form-control", placeholder = "Short Description Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedShortDescPath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedPostDetailsPath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedPostDetailsPath, new { @class = "form-control", placeholder = "Post Details Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedPostDetailsPath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedPubDatePath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedPubDatePath, new { @class = "form-control", placeholder = "Publish Date Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedPubDatePath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Feed Title Image</label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox">Is Image in Root Rss
                                    </label>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedImagePath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedImagePath, new { @class = "form-control", placeholder = "Rss Root Image Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedImagePath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Rss Cover Image</label>
                                    <label class="checkbox-inline">
                                        <input type="checkbox">Is Feed Cover Image available
                                    </label>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedCoverImagePath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedCoverImagePath, new { @class = "form-control", placeholder = "Rss Root Cover Image Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedCoverImagePath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedDetailPageImagePath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedDetailPageImagePath, new { @class = "form-control", placeholder = "Detail Page Image Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedDetailPageImagePath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedSubCategoryPath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedSubCategoryPath, new { @class = "form-control", placeholder = "Sub Category Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedSubCategoryPath)</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FeedDetailPageURLPath, new { @class = "control-label" })
                                    <div class="">
                                        @Html.TextBoxFor(m => m.FeedDetailPageURLPath, new { @class = "form-control", placeholder = "Detail Page URL Path" })
                                        <p class="help-block control-label">@Html.ValidationMessageFor(m => m.FeedDetailPageURLPath)</p>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-default">Add Feed Details</button>


                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->

            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div id="partialview">
        @{ Html.RenderAction("RssLinkList", "Admin"); }
    </div>
    <div id="divRssLinkList">
    </div>
</div>


<!-- /#page-wrapper -->
@using (Ajax.BeginForm("RssLinkList", "Admin", null, new AjaxOptions()
 {
     HttpMethod = "POST",
     InsertionMode = InsertionMode.Replace,
     UpdateTargetId = "divRssLinkList",
     OnSuccess = "OnGetRssLinkList"

 }, new { id = "fmGetRssLinkList" }))
{
    @Html.Hidden("page", 0, new { id = "hfProductPage" })
    @Html.Hidden("feedid", 0, new { productid = "hfFeedId" })

}