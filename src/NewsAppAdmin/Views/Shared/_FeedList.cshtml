@model IEnumerable<NewsAppAdmin.MODEL.ModelFeed>
@{
    
    WebGrid grid = new WebGrid(rowsPerPage: 10, canPage: true, canSort: true);
    grid.Bind(Model, autoSortAndPage: false, rowCount: Model.Count());    
}

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    @*@grid.GetHtml(
        tableStyle: "table table-striped table-bordered table-hover",
        headerStyle: "",
        footerStyle: "",
        rowStyle: "gradeA",
        alternatingRowStyle: "gradeC",
        selectedRowStyle: "gradeX",
        displayHeader: true,
        emptyRowCellValue: "-",
                          columns: new[] {
                          grid.Column("FeedId",header:"ID",canSort:false),
                          grid.Column("FeedChannelName"),
                          grid.Column("FeedCategory"),
                          grid.Column("FeedTitlePath",header:"Contact No")
                          },
                          firstText: "<< First",
                          previousText: "< Prev",
                          nextText: "Next >",
                          lastText: "Last >>"

        )*@

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Edit</th>
                                <th>Feed Id</th>
                                <th>Channel Name</th>
                                <th>Category</th>
                                <th>Title Path</th>
                                <th>Image Path</th>
                                <th>Added Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="gradeA">
                                        <td><a href="@Url.Action("EditFeedData", "Admin", new { id = item.FeedId })">Edit</a></td>
                                        <td>@item.FeedId</td>
                                        <td>@item.FeedChannelName</td>
                                        <td>@item.FeedCategory</td>
                                        <td class="center">@item.FeedTitlePath</td>
                                        <td class="center">@item.FeedImagePath</td>
                                        <td class="center">@item.FeedAddedDate</td>
                                    </tr>
                                }
                            }
                            else
                            {

                                <tr class="gradeA">
                                    <td colspan="6">No Record Found</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
